---
import { codeToHtml } from '@lueur/blog-utils';
import { shikiInstance } from '../constants/shiki';
type Props = {
    language: string;
    content: string;
    path?: string;
}
const { language, content, path } = Astro.props;

const highlighted = codeToHtml(content, language, { shikiInstance });

function langIcon(lang: string) {
    switch(lang.toLocaleLowerCase()) {
        case 'html':
            return 'html5';
        case 'css':
            return 'css3'
        default:
            return lang.toLocaleLowerCase();
    }
}
function pathWithIcons(path: string) {
    const p = path.split('/').map(pp => pp.trim() !== '' ? pp : null).filter(ppp => ppp !== null)
    const final = p.map((pt, i) => {
        return (i !== p.length - 1) 
            ? `<ion-icon style="color:cyan;" size="small" name="folder-outline"></ion-icon>\n${pt}\n\/` 
            : `<ion-icon style="color:yellow;" size="small" name="document-outline"></ion-icon>\n${pt}`
    })
    return final;
}
---

<figure>
    <figcaption>
        <span set:html={pathWithIcons(path ?? '')}>{path ?? ''}</span>
        <span class="lang">
            <i 
                class={`devicon-${langIcon(language)}-plain colored`} 
                style="font-size: 1.1rem; vertical-align: middle; horizontal-align: middle;"
            />
            {language}
        </span>
    </figcaption>
    <div class="body">
        <div class="copy-container">
            <div data-content={content} hidden></div>
            <button id="copy">Copy</button>
        </div>
        <div class="code-container font-mono" set:html={highlighted} />
    </div>    
</figure>

<script>
import { copy_to_clipboard } from "../helpers";

    const copyButtons = document.querySelectorAll('button#copy');
    const contents = document.querySelectorAll('div[data-content]');
    (copyButtons).forEach((copyButton, i) => { 
        const content = contents[i]?.getAttribute('data-content') ?? '';   
        copyButton.addEventListener('click', async function() { 
            copy_to_clipboard(copyButton, content)
        })
    });
</script>

