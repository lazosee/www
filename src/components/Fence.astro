        transition: all 0.3s ease;
        border: 1px solid #ccc;
    }
    button#copy:hover {
        background-color: #555;
    }
    button#copy:active {
        background-color: #444;
        scale: 1.15;
    }
    div:hover button#copy {
        /* display: block; */
        opacity: 1;
    }
</style>
